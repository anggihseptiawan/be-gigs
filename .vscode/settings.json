{
	"editor.formatOnSave": true,
	"editor.insertSpaces": true,
	"editor.renderWhitespace": "boundary",
	"editor.rulers": [120],
	"editor.tabSize": 2,
	"files.encoding": "utf8",
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"search.exclude": {
		".next/**": true,
		"node_modules/**": true,
		"out/**": true
	},
	"css.validate": false
}
