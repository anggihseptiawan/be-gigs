<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Nominal</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/">Home</a></li>
						<li class="breadcrumb-item">
							<a href="/voucher">Nominal</a>
						</li>
						<li class="breadcrumb-item active">Tambah</li>
					</ol>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<!-- general form elements -->
					<div class="card card-primary">
						<div class="card-header">
							<h3 class="card-title">Form Tambah Nominal</h3>
						</div>
						<!-- /.card-header -->
						<!-- form start -->
						<form action="/nominal/create" method="POST">
							<div class="card-body">
								<div class="form-group">
									<label>Nama koin</label>
									<select
										class="form-control select2"
										style="width: 100%"
										name="coinName"
										required
									>
										<option selected="selected">Pilih koin</option>
										<option value="Gold">Gold</option>
										<option value="Diamond">Diamond</option>
										<option value="Jewel">Jewel</option>
									</select>
								</div>
								<div class="form-group">
									<label for="coinQuantity">Jumlah koin</label>
									<input
										type="number"
										class="form-control"
										id="coinQuantity"
										name="coinQuantity"
										required
									/>
								</div>
								<div class="form-group">
									<label for="price">Harga</label>
									<input
										type="number"
										class="form-control"
										id="price"
										name="price"
										required
									/>
								</div>
							</div>
							<!-- /.card-body -->

							<div class="card-footer">
								<button type="submit" class="btn btn-primary">
									Simpan
								</button>
							</div>
						</form>
					</div>
					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->

